<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popupTube"
    android:background="@android:color/background_dark" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- top half -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <!-- Tube visualization here -->
            <ImageView
                android:id="@+id/tubeView"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/tube"/>

            <!-- RGB List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- R -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textRValue"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@android:color/background_light"
                        android:text="R"
                        android:paddingLeft="5dp"/>

                    <SeekBar
                        android:id="@+id/seekBarR"
                        android:max="255"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp" />
                </LinearLayout>

                <!-- G -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textGValue"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@android:color/background_light"
                        android:text="G"
                        android:paddingLeft="5dp"/>

                    <SeekBar
                        android:id="@+id/seekBarG"
                        android:max="255"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp" />
                </LinearLayout>

                <!-- B -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textBValue"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@android:color/background_light"
                        android:text="B"
                        android:paddingLeft="5dp"/>

                    <SeekBar
                        android:id="@+id/seekBarB"
                        android:max="255"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- bottom half -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/setTube1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Tube 1"/>

            <Button
                android:id="@+id/setTube2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Tube 2"/>

            <Button
                android:id="@+id/setTube3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Tube 3"/>

            <Button
                android:id="@+id/setTube4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Tube 4"/>

            <Button
                android:id="@+id/setTube5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Tube 5"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>